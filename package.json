{
	"name": "nexus-mf",
	"version": "1.0.0",
	"private": true,
	"description": "NexusMF: A pluggable micro-frontend framework with a powerful sandbox mechanism, designed to connect and manage applications seamlessly.",
	"scripts": {
		"start": "pnpm --parallel --stream -r start",
		"build": "pnpm --parallel --stream -r build",
		"test": "echo \"Error: no test specified\" && exit 1",
		"prepare": "husky",
		"format": "biome format --write .",
		"lint": "biome lint .",
		"check": "biome check --write ."
	},
	"lint-staged": {
		"*.{js,jsx,ts,tsx}": "biome check --write --no-errors-on-unmatched --diagnostic-level=error"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/wu9o/nexus-mf.git"
	},
	"keywords": [
		"micro-frontend",
		"framework",
		"module-federation",
		"webpack",
		"sandbox",
		"react",
		"monorepo",
		"nexus"
	],
	"author": "wu9o",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/wu9o/nexus-mf/issues"
	},
	"homepage": "https://wu9o.github.io/nexus-mf/",
	"packageManager": "pnpm@10.6.5",
	"devDependencies": {
		"@biomejs/biome": "^2.1.4",
		"axios": "^1.11.0",
		"husky": "^9.1.7",
		"lint-staged": "^16.1.5",
		"npm-run-all": "^4.1.5"
	}
}
